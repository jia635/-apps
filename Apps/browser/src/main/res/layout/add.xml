        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/name" />
        <EditText android:id="@+id/edittext1" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/url" />
        <EditText android:id="@+id/edittext2" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
