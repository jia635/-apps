<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="52dp"
       android:padding="5dp"
       android:gravity="center">
      <!--返回按钮-->
      <ImageButton
          android:id="@+id/poi_serach_item_back"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="5dp"
          android:background="@drawable/bg_back"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:scaleType="centerInside" />

      <!--搜索关健词-->
      <TextView
          android:id="@+id/poi_serach_item_et"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:layout_alignLeft="@id/poi_serach_item_back"
          android:gravity="center"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="60dp"
          android:textSize="18dip"
          android:text="设置"
          />
   </RelativeLayout>
   <TextView
       android:background="#ffdadada"
       android:layout_width="fill_parent"
       android:layout_height="2.0px"
       android:layout_alignParentBottom="true" />

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <LinearLayout
       android:orientation="vertical"
       android:id="@+id/setting_main_panel"
       android:background="#fff8f8f8"
       android:paddingTop="5.0dip"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">ßß



      <RelativeLayout
          android:id="@+id/setting_app"
          android:orientation="horizontal"
          android:background="@drawable/setting_btn_transparent"
          android:paddingLeft="20.0dip"
          android:paddingRight="20.0dip"
          android:paddingTop="9.0dip"
          android:paddingBottom="9.0dip"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          >
         <TextView
             android:textSize="16.0dip"
             android:textColor="#ff373737"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="应用推荐"
             android:layout_centerVertical="true"
             />
         <ImageView
             android:layout_width="18.0dip"
             android:layout_height="18.0dip"
             android:layout_marginLeft="15.0dip"
             android:src="@mipmap/icon_right"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             />

      </RelativeLayout>


      <View
          android:background="#ffdedfe0"
          android:layout_width="fill_parent"
          android:layout_height="1.0px"
          android:layout_marginTop="10.0dip"
          android:layout_marginBottom="5.0dip"
          />
      <RelativeLayout
          android:orientation="horizontal"
          android:paddingLeft="20.0dip"
          android:paddingTop="9.0dip"
          android:paddingRight="20.0dip"
          android:paddingBottom="9.0dip"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
         <TextView
             android:textSize="14.0dip"
             android:textColor="#ff373737"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="去除广告"
             android:layout_centerVertical="true" />
         <TextView
             android:textSize="12.0dip"
             android:textColor="#ff999999"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="15.0dip"
             android:text=""
             android:layout_centerVertical="true" />
         <CheckBox
             android:background="@drawable/practice_comment_switch_bg_d"
             android:layout_width="45.0dip"
             android:layout_height="22.0dip"
             android:layout_marginLeft="33.0dip"
             android:checked="true"
             android:button="@null"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true" />
      </RelativeLayout>

      <View
          android:background="#ffdedfe0"
          android:layout_width="fill_parent"
          android:layout_height="1.0px"
          android:layout_marginTop="10.0dip"
          android:layout_marginBottom="5.0dip"
         />

      <LinearLayout
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingLeft="20.0dip"
          android:paddingRight="20.0dip"
          android:visibility="visible"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="14.0dip">
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">
            <TextView
                android:textSize="14.0dip"
                android:textColor="#ff373737"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="考试反应时间间隔"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="14.0dip"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="每句话间隔5秒" />
         </LinearLayout>
         <SeekBar
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="0.0dip"
             android:layout_marginTop="15.0dip"
             android:maxHeight="3.0dip"
             android:max="10"
             android:progress="5"
             android:progressDrawable="@drawable/more_option_progress_bg_d"
             android:minHeight="3.0dip"
             android:thumb="@mipmap/icon_seekbar_circle"
             android:thumbOffset="0.0px"
             style="@android:style/Widget.ProgressBar.Horizontal" />
         <TextView
             android:textSize="12.0dip"
             android:textColor="@color/gray"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5.0dip"
             android:text="*当遇到句号或分号时,语音停顿时间" />
      </LinearLayout>

      <View
          android:background="#ffdedfe0"
          android:layout_width="fill_parent"
          android:layout_height="1.0px"
          android:layout_marginTop="10.0dip"
          android:layout_marginBottom="5.0dip"
          />

      <LinearLayout android:orientation="vertical"
          android:paddingLeft="20.0dip"
          android:paddingTop="20.0dip"
          android:paddingRight="20.0dip"
          android:paddingBottom="20.0dip"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
         <TextView
             android:id="@+id/version_text"
             android:textSize="14.0dip"
             android:textColor="#ff373737"
             android:gravity="center"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="当前软件版本：2.0"
             android:layout_centerVertical="true" />
         <TextView
             android:textSize="12.0dip"
             android:textColor="#ff999999"
             android:gravity="center"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5.0dip"
             android:text="Copyright © 2016. All rights reserved." />
      </LinearLayout>
   </LinearLayout>
</ScrollView>
</LinearLayout>
